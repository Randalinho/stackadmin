<MainView>:
	lblLabel: lblLabel
	txtLocalPath: txtLocalPath
	txtForename: txtForename
	txtLastname: txtLastname

    do_default_tab: False
    tab_pos: 'top_mid'
    tab_width: 150

    TabbedPanelItem:
        text: 'Versionen'
        GridLayout:
        	cols: 1
        	Label:
        		font_size: 20
        		bold: True
        		text: 'Versionen'
        		size_hint_y: None
        		height: 50
        	GridLayout:
				cols: 3
				BoxLayout:
					orientation: 'vertical'
					size_hint_y: None
        			height: 200
					Label:
						text: 'Verfügbare Modellreihen:'
						valign: 'top'
					TextInput:
						id: txtModellReihenFilter
					ListView:
						item_strings: 'A119', 'W220', 'X110'
					Button:
						text: 'Modell öffnen'
				BoxLayout:
					orientation: 'vertical'
					padding: 10
					size_hint_y: None
        			height: 200
					Label:
						text: 'Modell-Details:'
						valign: 'top'
					GridLayout:
						cols: 2
						Label:
							text: 'Hersteller:'
						Label:
							text: 'Mercedes Benz'
						Label:
							text: 'Modellbez.:'
						Label:
							text: 'A119'
						Label:
							text: 'Bezeichnung:'
						Label:
							#size_hint: None, None
							#halign: 'left'
							text: 'A-Klasse, 1.9 Liter'
						Label:
							text: 'Erste Version:'
						Label:
							text: '23.09.1024'
						Label:
							text: 'Ersteller:'
						Label:
							text: 'René Brixel'
				BoxLayout:
					orientation: 'vertical'
					size_hint_y: None
        			height: 200
					Label:
						valign: 'top'
						text: 'Funktionen:'
					Button:
						text: 'Checkout'
					Button:
						text: 'Sync to head'
					Button:
						text: 'Package'
            	
    TabbedPanelItem:
        text: 'Jobs'
        BoxLayout:
            Label:
            	id: lblLabel
                text: 'bla bla bla'
            Button:
            	id: btnTest
                text: 'Text aendern!'
                on_release: root.btnTestClick()
                
	TabbedPanelItem:
        text: 'Einstellungen'
        GridLayout:
        	cols: 3
        	
        	Label:
            	text: 'Lokaler Pfad:'
            TextInput:
				id: txtLocalPath
			Button:
            	id: btnLocalPath
                text: 'Pfad aendern'
                on_release: root.show_load()
                
			Label:
				text: 'Eigener Vorname/Nachname:'
            TextInput:
				id: txtForename
			TextInput:
				id: txtLastname
				
			Button:
				id: btnSettingsSave
				text: 'Einstellungen speichern'
				on_release: root.btnConfigSave()
			
<LoadDialog>:
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"
		FileChooserListView:
			id: filechooser
			dirselect: 'True'

		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "Abbruch"
				on_release: root.cancel()

			Button:
				text: "Oeffnen"
				on_release: root.load(filechooser.path)
				
<LoginScreen>:
	BoxLayout:
		Label:
			text: 'Benutzername:'
		TextInput:
			id: txtLoginUser
		Label:
			text: 'Passwort:'
		TextInput:
			id: txtLoginPass
			password: 'True'